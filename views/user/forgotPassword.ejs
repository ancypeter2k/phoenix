<!-- main Container/body -->
<div class="bg-black text-white">
    <%- include ('../patch/topper.ejs') %>

<div class="min-h-screen flex items-center justify-center bg-black">
  <div class="bg-black bg-opacity-10 p-8 mb-6 rounded-xl max-w-md w-full">
    <div class="w-full max-w-sm p-8 backdrop-filter backdrop-blur-sm bg-black bg-opacity-50 rounded-2xl shadow-2xl border border-white/10">
      <h2 class="text-4xl p-2 font-bold text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-red-600 mb-8 text-center ">Forgot Password</h2>
      
     <!-- flash message  -->
     <%- include('../patch/messages.ejs') %>

     <form class="space-y-4" action="/forgotPassword" method="POST" id="forgotPasswordForm">
     
      <div class="relative">
        <label for="email" class="text-white text-lg transition-all duration-300 pointer-events-none transform origin-left">Email</label>
  <input id="email"name="email" type="email" placeholder="Enter your Email" required class="w-full px-2 py-2 bg-white text-black rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-400 placeholder:text-gray-500 backdrop-blur transition duration-300">
      </div>  
      
      <div>
        <button type="submit"  class="w-full py-2 px-2 bg-gradient-to-r from-yellow-400 to-red-600 text-white font-bold rounded-lg hover:from-yellow-500 hover:to-red-700 transition duration-300 ease-in-out focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-400 transform hover:scale-105"
        >
          Submit
        </button>
      </div>

     </form>
    </div>
  </div>
  
</div>
  

<%- include ('../patch/bottom.ejs') %>