<body class="bg-gradient-to-b from-blue-50 to-blue-100 min-h-screen flex items-center justify-center p-4">
    <div class="max-w-4xl w-full">
        <div class="grid md:grid-cols-2 gap-8 items-center">
            <!-- Left Side - Illustration -->
            <div class="order-2 md:order-1">
                <svg class="w-full max-w-md mx-auto" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
                    <!-- Robot Body -->
                    <rect x="60" y="60" width="80" height="100" rx="10" fill="#3B82F6"/>
                    <rect x="70" y="80" width="60" height="60" rx="5" fill="#60A5FA"/>
                    
                    <!-- Robot Head -->
                    <rect x="75" y="30" width="50" height="40" rx="5" fill="#3B82F6"/>
                    <circle cx="90" cy="45" r="5" fill="#FBBF24"/>
                    <circle cx="110" cy="45" r="5" fill="#FBBF24"/>
                    
                    <!-- Robot Arms -->
                    <rect x="40" y="70" width="20" height="60" rx="5" fill="#3B82F6"/>
                    <rect x="140" y="70" width="20" height="60" rx="5" fill="#3B82F6"/>
                    
                    <!-- Robot Legs -->
                    <rect x="70" y="160" width="20" height="30" rx="5" fill="#3B82F6"/>
                    <rect x="110" y="160" width="20" height="30" rx="5" fill="#3B82F6"/>
                    
                    <!-- Error Signs -->
                    <text x="85" y="115" font-family="Arial" font-size="24" fill="white">404</text>
                </svg>
            </div>
            
            <!-- Right Side - Content -->
            <div class="order-1 md:order-2 text-center md:text-left">
                <h1 class="text-6xl md:text-7xl font-bold text-blue-600 mb-4">Oops!</h1>
                <h2 class="text-3xl md:text-4xl font-semibold text-gray-400 mb-6">
                    Page Not Found
                </h2>
                <p class="text-lg text-gray-600 mb-8">
                    Looks like our robot couldn't find the page you're looking for. Let's get you back on track!
                </p>
                <div class="flex flex-col md:flex-row gap-4">
                    <a href="/" class="inline-block px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition duration-300 text-lg font-semibold">
                        Return Home
                    </a>
                    <button onclick="history.back()" class="inline-block px-6 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition duration-300 text-lg font-semibold">
                        Go Back
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Additional Information -->
        <div class="mt-12 text-center text-gray-600">
            <p>
                If you believe this is a mistake, please 
                <a href="/#" class="text-blue-600 hover:underline">contact our support team</a>.
            </p>
        </div>
    </div>