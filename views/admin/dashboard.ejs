<!-- Main Container/Body -->
<div class="bg-[#18191a] text-gray-200 m-0 p-0 flex h-screen">
    <!-- Sidebar -->
    <%- include("./sidebar.ejs") %>
    <!-- Sidebar end -->
  
    <!-- Main Content -->
    <div class="flex flex-col flex-grow overflow-hidden">
      <!-- Navbar -->
      <nav class="bg-[#18191a] h-11 shadow-md flex items-center justify-center px-6">
        <div class="relative w-2/5">
          <input 
            type="text" 
            placeholder="Search" 
            class="bg-[#242526] text-gray-200 text-sm px-4 py-2 rounded-full w-full pr-10 focus:outline-none focus:ring-2 focus:ring-gray-500"
          >
          <button class="absolute right-2 top-1/2 transform -translate-y-1/2" aria-label="Search">
            <i class="fas fa-search text-gray-400"></i>
          </button>
        </div>
      </nav>
      
      <!-- Dashboard Content -->
      <div class="flex-grow p-6 overflow-y-auto">
        <h1 class="text-xl font-bold text-white mb-4 ">Sales Summary</h1>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
          <!-- Revenue Card -->
          <div class="bg-[#242526] rounded-lg shadow-md p-6">
            <h2 class="text-xl font-bold text-white mb-4">Revenue</h2>
            <p class="text-3xl font-bold">₹00,000</p>
            <p class="text-sm text-gray-400">Last 24 Hours</p>
          </div>
          <!-- Orders Card -->
          <div class="bg-[#242526] rounded-lg shadow-md p-6">
            <h2 class="text-xl font-bold text-white mb-4">Orders</h2>
            <p class="text-3xl font-bold">₹00,000</p>
            <p class="text-sm text-gray-400">Last 24 Hours</p>
          </div>
          <!-- Products Sold Card -->
          <div class="bg-[#242526] rounded-lg shadow-md p-6">
            <h2 class="text-xl font-bold text-white mb-4">Products Sold</h2>
            <p class="text-3xl font-bold">₹00,000</p>
            <p class="text-sm text-gray-400">Last 24 Hours</p>
          </div>
          <!-- Total Customers Card -->
          <div class="bg-[#242526] rounded-lg shadow-md p-6">
            <h2 class="text-xl font-bold text-white mb-4">Total Customers</h2>
            <p class="text-3xl font-bold">₹00,000</p>
            <p class="text-sm text-gray-400">Last 24 Hours</p>
          </div>
        </div>
  
        <!-- Graph Box -->
        <div class="bg-[#242526] rounded-lg shadow-md p-6 mt-6 h-96">
          <h2 class="text-xl font-bold text-white mb-4">New Box</h2>
          <!-- Add your graph component or content here -->
        </div>
      </div>
    </div>
  </div>
  