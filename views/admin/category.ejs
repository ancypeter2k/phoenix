
<!-- Main Container/body -->
<div class="bg-[#1c1c1c] text-gray-200 m-0 p-0 flex flex-col md:flex-row min-h-screen">

    <!-- Sidebar -->
    <%- include("./sidebar.ejs") %>
    <!-- Sidebar end -->
  
    <!-- Main Content -->
    <div class="flex flex-col flex-grow w-full md:w-auto">
      <!-- Navbar -->
      <nav class="bg-[#1c1c1c] h-12 shadow-md flex items-center justify-between px-6 sticky top-0 z-10">
        <div class="flex items-center">
          <!-- <img src="/images/images.jpeg" alt="Logo" class="h-8 w-auto mr-2"> <---Logo -->
          <h1 class="text-xl font-semibold text-white">Admin Panel</h1>
        </div>
        <form action="/admin/searchCategory" method="GET" class="relative w-1/3">
          <input type="text" name="search" placeholder="Search" class="bg-[#2c2c2c] text-gray-200 text-sm px-4 py-2 rounded-full w-full pr-10 focus:outline-none focus:ring-2 focus:ring-red-600">
          <button class="absolute right-2 top-1/2 transform -translate-y-1/2" aria-label="Search">
            <i class="fas fa-search text-gray-400"></i>
          </button>
        </form>
      </nav>
      <!-- Navbar end -->
  
      <div class="flex-grow p-6 overflow-y-auto">
  
        <!-- Add Category Button -->
        <div class="flex justify-end items-center">
          <a href="/admin/addCategory" class="bg-gradient-to-r from-red-500 to-red-700 hover:from-red-600 hover:to-red-800 text-white font-bold py-2 px-4 rounded-full shadow-lg transition duration-300 ease-in-out transform hover:-translate-y-1 hover:scale-110">  
            Add New Category      
          </a>
        </div>
        <!-- Add Category Button end -->
  
        <!-- Table -->
        <div class="mt-8">
          <h2 class="text-2xl font-bold text-white mb-6">Category</h2>
          <div class="bg-[#2c2c2c] rounded-lg shadow-lg overflow-x-auto">
  
            <table class="w-full text-sm text-left text-gray-300">
              <thead class="text-xs bg-[#3a3a3a] btn-white text-center">
                <tr>
                  <th scope="col" class="px-6 py-4 font-medium text-xl">SI.no</th>
                  <th scope="col" class="px-6 py-4 font-medium text-xl">Category name</th>
                  <th scope="col" class="px-6 py-4 font-medium text-xl">Image</th>
                  <th scope="col" class="px-6 py-4 font-medium text-xl">Actions</th>
                </tr>
              </thead>
  
              <tbody>
                <% categorylist.forEach((category, index) => { %>
                <tr class="border-b border-[#3a3a3a] hover:bg-[#3b3b3b] transition-colors duration-200 text-center">
                  <td class="px-6 py-4 font-medium text-lg"><%= index + 1 %></td>
                  <td class="px-6 py-4 text-lg"><%= category.name %></td>
                  <td class="px-6 py-4 text-lg flex justify-center items-center">
                    <img src="<%= category.image %>" class="w-10 h-10 object-cover rounded-full">
                  </td>
                  <td class="px-6 py-4">
                    <div class="flex items-center justify-center space-x-2"> 
                      <a href="/admin/editCategory/<%= category._id %>">
                        <button class="min-w-[80px] px-4 py-2 font-medium text-white bg-gradient-to-r from-green-500 to-green-700 hover:from-green-600 hover:to-green-800 rounded-lg transition duration-200" type="button">Edit</button>
                      </a>
                      <form action="/admin/blockCategory/<%= category._id %>" method="POST">
                        <button type="submit" class="min-w-[80px] px-4 py-2 font-medium text-white <%= category.isBlocked ? 'bg-green-500 hover:bg-green-600' : 'bg-red-500 hover:bg-red-600' %> rounded-lg transition duration-200">
                          <%= category.isBlocked ? 'Unblock' : 'Block' %>
                        </button>
                      </form>
                      <!-- <form action ="/admin/deleteCategory/<%=category._id %>" method="POST">
                        <button  class="min-w-[80px] px-4 py-2 font-medium text-white bg-gradient-to-r from-red-800 to-red-500 hover:from-red-500 hover:to-red-800 rounded-lg transition duration-200" type="submit">
                          Delete
                          </button>
                      </form> -->
                    </div> 
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
        <!-- Table end -->
      </div>
    </div>
  </div>
  